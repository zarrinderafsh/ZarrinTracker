<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.tsip.tracker.zarrintracker.GroupsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/BackColor"
        android:gravity="center_vertical|right">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivGroupActivity"
            android:contentDescription="@string/ivWiFiDesc"
            android:src="@drawable/user_group"
            android:clickable="true"
            android:layout_marginLeft="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@color/BackColor"
            android:gravity="center_vertical|right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/JoinGroup"
                android:textColor="@color/common_signin_btn_dark_text_pressed"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/ivGroup"
                android:contentDescription="@string/ivWiFiDesc"
                android:src="@drawable/addgroup"
                android:clickable="true"
                android:layout_below="@+id/txtSosTopMenuItem"
                android:layout_alignRight="@+id/txtSosTopMenuItem"
                android:layout_marginRight="0dp" />


        </LinearLayout>
    </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fillViewport="false" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lsvGroups"></LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ibtnHelp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/faq"
        android:background="@android:color/transparent" />

</RelativeLayout>
