<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.22"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="5dp">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/ivImageEvent"
            android:src="@drawable/sample_user"
            android:layout_gravity="center"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|right"
        android:background="#ffffff"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessageEvent"
            android:text="Some Text"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/tvDateEvent"
            android:gravity="right"
            android:textColor="#ff28ab8b"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="________________________"
            android:id="@+id/ttt"
            android:textColor="#ff395c74"
            android:gravity="center"
            android:singleLine="true"
            android:padding="0dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:padding="2dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:id="@+id/tvLocationEvent"
            android:textSize="18dp"
            android:textColor="#8CC739"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:id="@+id/tvDeleteEvent"
            android:textSize="18dp"
            android:textColor="#e31f64"
            android:layout_margin="5dp" />
    </LinearLayout>

</LinearLayout>
